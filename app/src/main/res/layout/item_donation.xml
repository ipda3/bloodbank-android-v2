<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/donation_adapter_ps_iv_donation_swipe_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dim_4dp"
    android:layout_marginStart="@dimen/dim_4dp"
    android:layout_marginTop="@dimen/dim_4dp"
    android:background="@null"
    app:dragEdge="left"
    app:mode="same_level">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dim_100dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/donation_adapter_tv_info"
            android:layout_width="@dimen/dim_40dp"
            android:layout_height="@dimen/dim_40dp"
            android:background="@drawable/shape_circil" />

        <ImageButton
            android:id="@+id/donation_adapter_tv_call"
            android:layout_width="@dimen/dim_40dp"
            android:layout_height="@dimen/dim_40dp"
            android:background="@drawable/shape_circil" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_100dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/dim_8dp"
            android:layout_marginStart="-50dp"
            android:layout_toEndOf="@id/donation_adapter_tv_blood_type"
            android:background="@drawable/shape_donation"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/donation_adapter_tv_name"
                style="@style/donation_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/donation_adapter_tv_address"
                style="@style/donation_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/donation_adapter_tv_city"
                style="@style/donation_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/donation_adapter_tv_blood_type"
            android:layout_width="@dimen/dim_100dp"
            android:layout_height="@dimen/dim_100dp"
            android:background="@drawable/shape_circil"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_blood_size"
            android:textStyle="bold" />

    </RelativeLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>