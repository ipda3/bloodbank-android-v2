<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/shape_grey_shadow"
    android:textAlignment="center">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dim_16dp"
        android:text="@string/logout"
        android:textColor="@color/txt_color2"
        android:textSize="@dimen/txt_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginEnd="@dimen/dim_8dp"
        android:layout_marginBottom="@dimen/dim_8dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/dialog_ok"
            android:layout_width="@dimen/dim_48dp"
            android:layout_height="@dimen/dim_48dp"
            android:background="@drawable/circle_shadow"
            android:layout_marginStart="@dimen/dim_24dp"
            android:layout_marginEnd="@dimen/dim_48dp"
            android:src="@drawable/ic_check_solid"
            android:padding="@dimen/dim_12dp"/>

        <ImageView
            android:id="@+id/dialog_no"
            android:layout_width="@dimen/dim_48dp"
            android:layout_height="@dimen/dim_48dp"
            android:background="@drawable/circle_shadow"
            android:layout_marginStart="@dimen/dim_48dp"
            android:layout_marginEnd="@dimen/dim_24dp"
            android:src="@drawable/ic_times_solid"
            android:padding="@dimen/dim_12dp"/>

    </LinearLayout>

</RelativeLayout>