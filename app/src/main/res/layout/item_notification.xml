<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dim_8dp"
    android:layout_marginStart="@dimen/dim_8dp"
    android:layout_marginTop="@dimen/dim_8dp"
    android:background="@drawable/shape_notification"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_notification_iv_icon"
        android:layout_width="@dimen/dim_40dp"
        android:layout_height="@dimen/dim_40dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/dim_12dp"
        android:layout_marginEnd="@dimen/dim_8dp"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_marginTop="@dimen/dim_4dp"
        android:src="@drawable/ic_notifications" />

    <TextView
        android:id="@+id/item_notification_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/dim_8dp"
        android:layout_marginStart="@dimen/dim_8dp"
        android:layout_toEndOf="@id/item_notification_iv_icon"
        android:layout_toStartOf="@id/item_notification_tv_time"
        android:textColor="@color/txt_color2"
        android:textSize="@dimen/dim_16dp" />

    <TextView
        android:id="@+id/item_notification_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/dim_8dp"
        android:layout_marginStart="@dimen/dim_8dp"
        android:drawableStart="@drawable/ic_timer"
        android:textColor="@color/txt_color3" />

</RelativeLayout>