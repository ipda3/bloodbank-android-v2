<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/donations_list_Fragment_s_fl_shimmer_donations"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_12dp">

            <LinearLayout
                style="@style/text_input"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_40dp"
                android:layout_marginEnd="@dimen/dim_8dp"
                android:layout_marginStart="@dimen/dim_8dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Spinner
                    style="@style/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <LinearLayout
                style="@style/text_input"
                android:layout_width="0dp"
                android:layout_height="@dimen/dim_40dp"
                android:layout_marginEnd="@dimen/dim_8dp"
                android:layout_marginStart="@dimen/dim_4dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Spinner
                    style="@style/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/dim_40dp"
                android:layout_height="@dimen/dim_40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/dim_8dp">

                <ImageButton
                    android:layout_width="@dimen/dim_40dp"
                    android:layout_height="@dimen/dim_40dp"
                    android:background="@drawable/shape_circil" />

                <ImageButton
                    android:layout_width="@dimen/dim_40dp"
                    android:layout_height="@dimen/dim_40dp"
                    android:background="@null"
                    android:src="@drawable/ic_search_solid" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/item_donation_shimmer"/>

            <include layout="@layout/item_donation_shimmer"/>

            <include layout="@layout/item_donation_shimmer"/>

            <include layout="@layout/item_donation_shimmer"/>

            <include layout="@layout/item_donation_shimmer"/>

            <include layout="@layout/item_donation_shimmer"/>

            <include layout="@layout/item_donation_shimmer"/>

            <include layout="@layout/item_donation_shimmer"/>

        </LinearLayout>


    </LinearLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
